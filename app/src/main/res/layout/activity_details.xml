<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
android:background="#d7ccc8"
tools:context="com.example.mbmbmb.nationaltechnologymobiletask.Details">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="5sp"
                />
                <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimary"
                        tools:text="Recipe Title" />

                    <TextView
                        android:textColor="#3e2723"
                        android:id="@+id/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="3sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        tools:text="Recipe Category : " />

                    <TextView
                        android:textColor="#3e2723"
                        android:id="@+id/subcategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="3sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        tools:text="Recipe Subcategory : " />

                    <RatingBar

                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="3sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        />


                    <TextView
                        android:textColor="#3e2723"
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="3sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        tools:text="Description : " />

                    <TextView
                        android:textColor="#3e2723"
                        android:id="@+id/IngredientsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3sp"
                        android:layout_marginTop="3sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="Ingredients Titles : " />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/Ingredients_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:paddingLeft="8dp"
                        android:elevation="6dp"
                        android:background="@android:color/white"
                        android:layout_below="@+id/IngredientsText"
                        android:paddingRight="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:text="Instructions :" />




    <TextView
        android:background="#efebe9"
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8sp"
        android:text="instructions"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="#3e2723"
        />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
